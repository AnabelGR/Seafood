<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/CSS/StyleSheet.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/c3a95916f1.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Yanone+Kaffeesatz" rel="stylesheet">
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <div id="pagewrap">
            <nav>
                <ul class="list-group">
                    <li><a class="list-group-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="list-group-item">@Html.ActionLink("Subscribe", "Index", "Subscriber")</li>
                    <li class="list-group-item">@Html.ActionLink("Delivery", "Delivery", "Home")</li>
                    <li class="list-group-item">@Html.ActionLink("About Us", "About", "Home")</li>
                    <li class="list-group-item">@Html.ActionLink("Register", "Register", "Account")</li>
                    <li class="list-group-item">@Html.ActionLink("Log In", "Login", "Account")</li>
                </ul>
            </nav>
            <section class="left-section">
                @RenderBody()
            </section>
            <section class="right-section">
                <div class="image"><img src="~/images/cat3.jpg" /></div>
                <div class="image"><img src="~/images/cat1.jpg" /></div>
                <div class="image"><img src="~/images/cat2.jpg" /></div>

            </section>


            <footer id="footer">
                <p>Son of Cod Fishing Company <i class="fa fa-copyright fa-fw" aria-hidden="true"></i>2017</p> <p> @Html.ActionLink("Back to List", "Index", "Home")</p>
            </footer>
        </div>
</body>
</html>
