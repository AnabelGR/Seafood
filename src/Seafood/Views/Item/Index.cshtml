@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable <Seafood.Models.Item>

<div class="mui-panel">
    <h2>Check out what's been caught today!</h2>
    <div class="mui-divider"></div>
    <div class="mui-panel">
        <div class="mui-container-fluid">
            <div class="mui-row">
                @foreach (var listItem in Model)
                    {
                        <div class="mui-col-md-6">
                            <h3>@Html.DisplayFor(modelItem => listItem.Name) </h3>
                            <p>@Html.DisplayFor(modeItem => listItem.Origin)</p>
                            <p>@Html.DisplayFor(modeItem => listItem.Price)</p>
                            <p>@Html.DisplayFor(modeItem => listItem.Description)</p>
                            <div class="mui-divider"></div>
                        </div>
                    }
             </div>
        </div>
    </div>
</div>